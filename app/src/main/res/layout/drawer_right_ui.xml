<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:fitsSystemWindows="true"
    android:layout_width="240dp"
    android:layout_height="match_parent"
    android:layout_gravity="end"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#800080">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Prayer List"
            android:id="@+id/textView13"
            android:textColor="#ffffff"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer_prayer_request_type"
            android:src="@drawable/ic_actionbar_timeglass_w"
            android:background="#800080"
            android:layout_gravity="center"
            android:layout_marginRight="30dp"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer_prayer_request_add"
            android:src="@drawable/ic_actionbar_plus_w"
            android:background="#800080"
            android:layout_gravity="center"
            android:layout_marginRight="10dp"
            android:scaleType="fitCenter" />

    </LinearLayout>

    <ListView android:id="@+id/drawer_right_listview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:choiceMode="singleChoice"
            android:divider="#f0f0f0"
            android:dividerHeight="2dp"
            android:background="#ffffff"
            tools:listitem="@layout/list_view_row_prayer_request_drawer"/>

</LinearLayout>