<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/createnewprayer_back_ImageButton"
            android:src="@drawable/ic_actionbar_back_w"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/createnewprayer_tagfriend_ImageButton"
            android:src="@drawable/ic_actionbar_tagfriend_p"
            android:layout_weight="2"
            android:scaleType="fitCenter"
            android:background="?attr/selectableItemBackgroundBorderless" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/createnewprayer_public_ImageButton"
            android:src="@drawable/ic_actionbar_public_p"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="2"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/createnewprayer_attachment_ImageButton"
            android:src="@drawable/ic_actionbar_image_attachment_p"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:layout_weight="2"
            android:scaleType="fitCenter" />

        <ImageButton
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:id="@+id/createnewprayer_done_ImageButton"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:src="@drawable/ic_actionbar_done_p"
            android:scaleType="fitCenter"/>

    </LinearLayout>

</RelativeLayout>