<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"></RelativeLayout>

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:id="@+id/drawer_prayer_request_answered"
        android:src="@drawable/answered_stamp"
        android:visibility="invisible" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:weightSum="1"
    android:descendantFocusability="blocksDescendants"
    android:paddingBottom="5dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="#Serene &amp; Jack Pregnancy"
        android:id="@+id/drawer_prayer_request_subject_textView"
        android:paddingLeft="5dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:textColor="#000000"
        android:textStyle="bold"
        android:paddingTop="5dp" />

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="visible"
        android:id="@+id/linearLayout" >

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer_prayer_request_imageButton1"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer_prayer_request_imageButton2"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer_prayer_request_imageButton3"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer_prayer_request_imageButton4"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:scaleType="fitCenter" />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/drawer_prayer_request_imageButton5"
            android:layout_weight="1"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="10 Aug 2015 03:34 PM"
            android:id="@+id/drawer_prayer_request_createdwhen"
            android:layout_weight="1"
            android:gravity="right"
            android:textSize="10sp"
            android:paddingRight="5dp" />

    </LinearLayout>

    <ProgressBar
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/drawer_prayer_request_progressbar"
        android:indeterminate="true"
        android:indeterminateBehavior="repeat"
        android:indeterminateOnly="true"
        android:layout_alignParentBottom="false"
        android:layout_alignParentTop="true"
        android:visibility="visible"
        android:layout_marginTop="-7dp" />


</RelativeLayout>